{% extends ':main:app.list.html.twig' %}

{% block actionBar %}
    <a href="{{ path("add_employer") }}" class="btn btn-primary add-btn">Add <i class="fa fa-plus"></i></a>
{% endblock %}

{% block table %}
    <tr>
        <th class="number">S/N </th>
        <th>Email</th>
        <th>Name</th>
        <th>Mobile</th>
        <th>Fax</th>
        <th>Employer Type</th>
        <th>Actions</th>
    </tr>

    {% for record in records %}
        <tr {% if loop.index%2 !=0 %} class="odd"{% endif %}>
            <td>{{ loop.index }}</td>
            <td>{{ record.email }}</td>
            <td>{{ record.name }}</td>
            <td>{{ record.mobile }}</td>
            <td>{{ record.fax }}</td>
            <td>{{ record.description }}</td>
            <td class="action align-center">
                <a href="{{ path("edit_employer",{'employerId':record.employer_id}) }}" class="btn btn-yellow" title="Click to edit record"><i class="fa fa-pencil"></i></a>
                <a href="{{ path("delete_employer",{'employerId':record.employer_id}) }}" class="btn btn-red confirm-delete-modal" title="Click to delete record"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
    {% endfor %}

{% endblock %}
